<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="5dp" />

            <gradient
                android:angle="90"
                android:centerColor="#0E584E"
                android:endColor="#0E584E"
                android:startColor="#00352E" />
        </shape>
    </item>
    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <shape android:shape="rectangle" >
            <corners android:radius="5dp" />

            <solid android:color="#388E82" />
        </shape>
    </item>

</layer-list>